<section id="section-login">
    <div class="container">
        <div class="row">
            <form id="formLogin" action="#/login" method="post" class="form-horizontal col-sm-offset-4 col-md-offset-4 col-lg-offset-4 col-sm-4 col-md-4 col-lg-4 game-menu-focus">
                <h3>Login</h3>
                <div class="form-group">
                    <input type="text" name="username" class="form-control" id="username-login" placeholder="Enter your username">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="pwd-login" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Login</button>
                </div>
            </form>
        </div>
    </div>
</section>