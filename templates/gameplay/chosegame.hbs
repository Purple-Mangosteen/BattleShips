{{> header}}

<section id="section-choose-map">
    <div class="container">
        <div class="row">
            <div class="container col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6 game-menu-focus">
                <h2>Choose Map</h2>
                <table class="table table-striped text-center">
                    <thead >
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Score</th>
                        <th class="text-center">Hits</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each choseMapData}}
                        <tr>
                            <td>
                                {{this.gameName}}
                            </td>
                            <td>
                            {{#if this.gameStarted }}
                                {{#if this.gameFinished}}
                                    {{this.score}}
                                {{else}}
                                    <a href="#/play/{{this.id}}"
                                       class="btn btn-info"
                                       role="button"
                                    >
                                        Resume
                                    </a>
                                {{/if}}
                            {{else}}
                                <a href="#/play/{{this.id}}"
                                   class="btn btn-success"
                                   role="button"
                                >
                                    Play
                                </a>
                            {{/if}}
                            </td>
                            <td>{{this.hits}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

